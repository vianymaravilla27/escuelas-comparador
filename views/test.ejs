<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.5.0/Chart.js"></script>
</head>
<body>

    <div class="chart-container" style="position: relative; height:10vh; width:20vw">
        <canvas id="myChart"></canvas>
    </div>

    <script>
        window.onload = function () {
               var ctx = document.getElementById('myChart');
            var myChart = new Chart(ctx, {
                type: 'radar',
                data: {
                    labels: ['Nivel Educativo', 'Estudiantes', 'Instalaciones', 'Egresados', 'Dificultad', 'Precio'],
                    datasets: [{
                        label: '# of Votes',
                        data: [80, 40, 60, 30, 50, 41],
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(75, 192, 192, 0.2)',
                            'rgba(153, 102, 255, 0.2)',
                            'rgba(255, 159, 64, 0.2)'
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(255, 159, 64, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        yAxes: [{
                            ticks: {
                                beginAtZero: true
                            }
                        }]
                    }
                }
            });
            }
       
    </script>
</body>
</html>